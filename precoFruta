    <script>
        let fruta = prompt("Digite o nome do alimento:").toLowerCase();
        precoFruta(fruta);
        function precoFruta(fruta){
            switch (fruta){
                case "morango":
                case "laranja":
                case "uva":
                    console.log("O valor é R$ 5,99");
                    break;
                default:
                    console.log("Sem preço")

            }
        }
        
    </script>
