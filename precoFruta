<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <script>
        
        let continua = true
        while(continua){
            let fruta = prompt("Digite o nome do alimento ou Sair:");
            precoFruta(fruta);
        }
        
        function precoFruta(fruta){
            switch (fruta.toLocaleLowerCase()){
                case "morango":
                case "laranja":
                case "uva":
                    alert("O valor é R$ 5,99");
                    break;
                case "sair":
                    alert("Boa noite")
                    continua = false;
                    break;
                default:
                    alert("Sem preço")
                    break;

            }
        }
        
    </script>
</body>
</html>
